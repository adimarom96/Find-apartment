<SearchSuccess>:
    GridLayout:
        padding:30,30
        spacing:30,30
        cols:1
        Button:
            text:"Enlighten me"
            size_hint:0.1,0.1
            on_press:root.prin()


        ScrollView:
            Label:
                id:quote
                text:""
                text_size:self.width,None
                size_hint_y:None
                height:self.texture_size[1]


