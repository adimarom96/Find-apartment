<MainScreen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20

            Label:
                text:"Find APT"
                font_size:"40sp"
            TextInput:
                id: area
                hint_text:"Choose area"
            TextInput:
                id: max_price
                hint_text: "Enter max price"
            TextInput:
                id: number_of_rooms
                hint_text: "Enter number of rooms"
            TextInput:
                id: floor_number
                hint_text: "Enter the highest floor you want"

            TextInput:
                id: dist_from_uni
                hint_text: "Enter max distance from university"
            RelativeLayout:
                Button:
                    text:"Search"
                    on_press: root.search(root.ids.area.text,root.ids.max_price.text,root.ids.number_of_rooms.text,root.ids.floor_number.text,root.ids.dist_from_uni.text)
                    size_hint:0.3,0.5
                    pos_hint: {'center_x':0.5,'center_y':0.6}
            Label:
                id: login_worng
                text:""
        GridLayout:
            cols:2
            size_hint: 0.2,0.2
            padding:10,10
            spacing:10,10
            Button:
                text:"Load data"
                size_hint: 1,1
                background_color:1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
                #on_press: root.run()
                color: 0.1,0.7,1,1
            Button:
                text:"Sign Up"
                background_color:1,1,1,0
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7,1,1
#                on_press: root.sign_up()
